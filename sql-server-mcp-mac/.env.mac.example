# SQL Server Connection Configuration for macOS
# Copy this file to .env and update with your actual values

# SQL Server Connection (Docker on Mac)
SQL_SERVER=localhost
SQL_DATABASE=master
SQL_PORT=1433

# Authentication (MUST be false on macOS - Windows Auth not supported)
SQL_USE_WINDOWS_AUTH=false

# SQL Server Authentication (required when SQL_USE_WINDOWS_AUTH=false)
SQL_USERNAME=sa
SQL_PASSWORD=gukukr6rg#67

# Database Access Control (optional)
# Comma-separated list of databases the MCP server can access
# Leave empty to allow access to all databases
# SQL_ALLOWED_DATABASES=database1,database2

# Cache Settings
CACHE_TTL_MINUTES=60
ENABLE_SCHEMA_CACHE=true

# Query Settings
QUERY_TIMEOUT=30
MAX_RESULT_ROWS=1000

# Security
# Set to true only if you want to allow INSERT, UPDATE, DELETE operations
ENABLE_WRITE_OPERATIONS=false
