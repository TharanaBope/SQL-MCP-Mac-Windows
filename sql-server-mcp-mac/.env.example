# SQL Server Connection Settings
SQL_SERVER=localhost
SQL_DATABASE=master
SQL_PORT=1433

# Authentication (choose one method)
# For Windows Authentication, set to "true"
SQL_USE_WINDOWS_AUTH=true
# For SQL Authentication, set to "false" and provide credentials
SQL_USERNAME=
SQL_PASSWORD=

# Optional: Restrict access to specific databases (comma-separated)
# Leave empty to allow all databases
SQL_ALLOWED_DATABASES=

# Security Settings
QUERY_TIMEOUT=30
MAX_RESULT_ROWS=1000
ENABLE_WRITE_OPERATIONS=false

# Cache Settings (optional)
ENABLE_SCHEMA_CACHE=true
CACHE_TTL_MINUTES=60
